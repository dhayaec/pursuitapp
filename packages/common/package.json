{
  "name": "@pursuitapp/common",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "dependencies": {
    "yup": "^0.26.6"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c ../../tslint.json 'src/**/*.ts' --fix",
    "test": "jest",
    "pretty": "prettier 'src/**/*.ts' --write",
    "precommit": "lint-staged",
    "cover": "jest --coverage"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn pretty",
      "yarn lint",
      "jest --bail --findRelatedTests",
      "git add ."
    ]
  },
  "jest": {
    "collectCoverage": false,
    "rootDir": "./src",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ]
  }
}
