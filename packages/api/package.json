{
  "name": "@pursuitapp/api",
  "version": "0.1.0",
  "private": true,
  "description": "Awesome project developed with TypeORM.",
  "dependencies": {
    "apollo-errors": "^1.9.0",
    "apollo-server-express": "^2.4.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^3.4.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "graphql-redis-subscriptions": "^2.0.0",
    "helmet": "^3.15.0",
    "iconv-lite": "^0.4.24",
    "ioredis": "^4.5.1",
    "mysql2": "^1.6.4",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.3.4",
    "type-graphql": "^0.16.0",
    "typeorm": "^0.2.12",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon",
    "generate": "gql-gen",
    "lint": "eslint  'src/**/*.ts' --fix",
    "setup": "ts-node ./src/scripts/setup-test-db.ts",
    "create:db": "ts-node ./src/scripts/create-db.ts",
    "test": "jest",
    "test:w": "jest --watch",
    "pretty": "prettier 'src/**/*.ts' --write",
    "cover": "jest --coverage",
    "debug:ts": "node --inspect --require ts-node/register  ./src/index.ts",
    "debug:ts:brk": "node --inspect-brk --require ts-node/register ./src/index.ts",
    "debug:jest": "node --inspect-brk ../../node_modules/.bin/jest --runInBand --bail",
    "test:ci": "jest --bail --findRelatedTests ./src/**/**.ts",
    "build": "tsc --noEmit",
    "lintstaged": "lint-staged"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.10",
    "@types/express": "4.17.0",
    "@types/express-session": "^1.15.13",
    "@types/helmet": "^0.0.43",
    "@types/ioredis": "^4.0.13",
    "@types/uuid": "^3.4.5"
  },
  "workspaces": {
    "nohoist": [
      "typeorm",
      "typeorm/**"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "yarn pretty",
      "yarn lint",
      "yarn build",
      "yarn test:ci",
      "git add ."
    ]
  }
}
