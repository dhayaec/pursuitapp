{
  "name": "@pursuitapp/server",
  "version": "0.0.4",
  "private": true,
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.8",
    "@types/express": "4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/graphql": "14.0.5",
    "@types/ioredis": "^4.0.6",
    "@types/node": "10.12.18",
    "@types/uuid": "^3.4.4",
    "nodemon": "1.18.9",
    "ts-node": "8.0.1",
    "tsconfig-paths": "^3.7.0",
    "typescript": "3.2.4"
  },
  "dependencies": {
    "apollo-server-express": "2.3.1",
    "argon2": "0.20.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^3.4.0",
    "dotenv-safe": "^6.1.0",
    "express": "4.16.4",
    "express-session": "^1.15.6",
    "graphql": "14.1.1",
    "ioredis": "^4.5.1",
    "mysql2": "^1.6.4",
    "reflect-metadata": "0.1.13",
    "slugify": "^1.3.4",
    "type-graphql": "0.16.0",
    "typeorm": "0.2.12",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon",
    "generate": "gql-gen",
    "lint": "tslint 'src/**/*.ts' --fix",
    "test": "jest",
    "precommit": "lint-staged",
    "pretty": "prettier 'src/**/*.ts' --write",
    "cover": "jest --coverage",
    "start:debug:ts": "nodemon --inspect ./src/index.ts",
    "start:debug:ts:brk": "nodemon --inspect-brk ./src/index.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn pretty",
      "yarn lint",
      "jest --bail --findRelatedTests",
      "git add ."
    ]
  },
  "workspaces": {
    "nohoist": [
      "typeorm",
      "typeorm/**"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ],
    "roots": [
      "<rootDir>",
      "<rootDir>/src"
    ]
  }
}
