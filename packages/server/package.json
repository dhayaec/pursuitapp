{
  "name": "@pursuitapp/server",
  "version": "0.1.0",
  "private": true,
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/connect-redis": "^0.0.8",
    "@types/express": "4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/faker": "^4.1.5",
    "@types/graphql": "14.0.5",
    "@types/helmet": "^0.0.42",
    "@types/ioredis": "^4.0.6",
    "@types/node": "10.12.18",
    "@types/uuid": "^3.4.4",
    "nodemon": "1.18.9",
    "ts-node": "8.0.1",
    "tsconfig-paths": "^3.7.0",
    "typescript": "3.2.4"
  },
  "dependencies": {
    "apollo-env": "^0.3.2",
    "apollo-errors": "^1.9.0",
    "apollo-server-express": "^2.4.0",
    "argon2": "^0.20.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^3.4.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "graphql": "^14.1.1",
    "graphql-redis-subscriptions": "^2.0.0",
    "helmet": "^3.15.0",
    "iconv-lite": "^0.4.24",
    "ioredis": "^4.5.1",
    "mysql2": "^1.6.4",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.3.4",
    "type-graphql": "^0.16.0",
    "typeorm": "^0.2.12",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon",
    "generate": "gql-gen",
    "lint": "tslint -c ../../tslint.json 'src/**/*.ts' --fix",
    "setup": "ts-node ./src/scripts/setup-test-db.ts",
    "create:db": "ts-node ./src/scripts/create-db.ts",
    "test": "jest",
    "test:w": "jest --watch",
    "precommit": "lint-staged",
    "pretty": "prettier 'src/**/*.ts' --write",
    "cover": "jest --coverage",
    "debug:ts": "node --inspect --require ts-node/register  ./src/index.ts",
    "debug:ts:brk": "node --inspect-brk --require ts-node/register ./src/index.ts",
    "debug:jest": "node --inspect-brk ../../node_modules/.bin/jest --runInBand --bail",
    "test:ci": "jest --bail --findRelatedTests ./src/**/**.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn pretty",
      "yarn lint",
      "yarn test:ci",
      "git add ."
    ]
  },
  "workspaces": {
    "nohoist": [
      "typeorm",
      "typeorm/**"
    ]
  }
}
