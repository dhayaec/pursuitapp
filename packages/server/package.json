{
  "name": "@pursuitapp/server",
  "version": "1.0.3",
  "private": true,
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/graphql": "14.0.5",
    "@types/node": "10.12.18",
    "nodemon": "1.18.9",
    "ts-node": "8.0.1",
    "typescript": "3.2.4"
  },
  "dependencies": {
    "apollo-server-express": "2.3.1",
    "argon2": "0.20.0",
    "dotenv-safe": "^6.1.0",
    "express": "4.16.4",
    "graphql": "14.1.1",
    "mysql2": "^1.6.4",
    "reflect-metadata": "0.1.13",
    "type-graphql": "0.16.0",
    "typeorm": "0.2.12"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "generate": "gql-gen",
    "lint": "tslint 'src/**/*.ts' --fix",
    "test": "jest",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn pretty",
      "yarn lint",
      "jest --bail --findRelatedTests",
      "git add ."
    ]
  },
  "workspaces": {
    "nohoist": [
      "typeorm",
      "typeorm/**"
    ]
  },
  "jest": {
    "rootDir": "./src",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
