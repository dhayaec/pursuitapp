{
  "name": "@pursuitapp/web",
  "version": "0.1.0",
  "scripts": {
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "cover": "jest --coverage",
    "dev": "nodemon",
    "debug:ts": "NODE_ENV=development node --inspect -r ts-node/register server/index.ts",
    "debug:ts:brk": "node --inspect-brk --require ts-node/register ./server/index.ts",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production ts-node --project tsconfig.server.json server/index.ts",
    "type-check": "tsc",
    "generate": "gql-gen --debug --config codegen.yml",
    "lint": "eslint  'pages/**/*.t{s,sx}' 'server/**/*.t{s,sx}' 'lib/**/*.t{s,sx}' 'components/**/*.t{s,sx}' 'utils/**/*.t{s,sx}' --fix",
    "test": "jest",
    "lintstaged": "lint-staged"
  },
  "dependencies": {
    "@pursuitapp/common": "^0.1.0",
    "@pursuitapp/ui": "^0.1.0",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "apollo-boost": "0.1.27",
    "apollo-link-context": "^1.0.14",
    "apollo-link-error": "^1.1.9",
    "apollo-link-ws": "^1.0.14",
    "cleave.js": "^1.4.9",
    "compression": "^1.7.4",
    "fastify": "^2.6.0",
    "fastify-compress": "^0.10.0",
    "formik": "^1.4.3",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.0.2",
    "next-routes": "^1.4.2",
    "react": "^16.8.6",
    "react-apollo": "^2.5.8",
    "react-dom": "^16.8.6",
    "reakit": "^0.16.0",
    "reakit-theme-default": "^0.2.0",
    "styled-components": "^4.1.3",
    "subscriptions-transport-ws": "^0.9.15",
    "terser": "^3.14"
  },
  "devDependencies": {
    "@types/cleave.js": "^1.4.0",
    "@types/compression": "^0.0.36",
    "@types/cookie": "^0.3.3",
    "@types/next": "^8.0.6",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "babel-plugin-styled-components": "^1.10.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "file-loader": "^3.0.1",
    "graphql-code-generator": "^0.16.0",
    "graphql-codegen-typescript-client": "^0.16.0",
    "graphql-codegen-typescript-common": "^0.16.0",
    "graphql-codegen-typescript-react-apollo": "^0.16.0",
    "url-loader": "^1.1.2"
  },
  "license": "ISC",
  "jest": {
    "collectCoverage": false,
    "rootDir": "./",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "jest --bail --findRelatedTests",
      "git add ."
    ]
  }
}
