{
  "name": "@pursuitapp/web",
  "version": "0.1.0",
  "scripts": {
    "precommit": "lint-staged",
    "cover": "jest --coverage",
    "dev": "nodemon",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "generate": "gql-gen --config codegen.yml",
    "lint": "tslint 'pages/**/*.t{s,sx}' 'ssr/**/*.t{s,sx}' 'lib/**/*.t{s,sx}' 'components/**/*.t{s,sx}' 'utils/**/*.t{s,sx}' --fix",
    "test": "jest",
    "pretty": "prettier 'pages/**/*.t{s,sx}' 'ssr/**/*.t{s,sx}' 'lib/**/*.t{s,sx}' 'components/**/*.t{s,sx}' 'utils/**/*.t{s,sx}' --write"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn pretty",
      "yarn lint",
      "jest --bail --findRelatedTests",
      "git add ."
    ]
  },
  "dependencies": {
    "@pursuitapp/common": "^0.1.0",
    "@pursuitapp/ui": "^0.1.0",
    "apollo-boost": "0.1.27",
    "apollo-link-context": "^1.0.14",
    "formik": "^1.4.3",
    "isomorphic-unfetch": "3.0.0",
    "next": "7.0.2",
    "next-routes": "1.4.2",
    "react": "16.7.0",
    "react-apollo": "2.4.0",
    "react-dom": "16.7.0",
    "styled-components": "4.1.3",
    "terser": "3.14"
  },
  "devDependencies": {
    "@types/next": "7.0.6",
    "@types/react": "16.7.20",
    "@types/react-dom": "16.0.11",
    "@zeit/next-css": "1.0.1",
    "@zeit/next-typescript": "1.1.1",
    "file-loader": "3.0.1",
    "graphql-code-generator": "^0.16.0",
    "graphql-codegen-typescript-client": "^0.16.0",
    "graphql-codegen-typescript-common": "^0.16.0",
    "graphql-codegen-typescript-react-apollo": "^0.16.0",
    "nodemon": "1.18.9",
    "ts-node": "8.0.1",
    "typescript": "3.2.4",
    "url-loader": "1.1.2"
  },
  "license": "ISC",
  "jest": {
    "collectCoverage": true,
    "rootDir": "./",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ]
  }
}
